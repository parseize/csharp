{
            double dblEinsatz;
            Int16 intTipp1;
            Int16 intTipp2;
            Int16 intErgebnis1;
            Int16 intErgebnis2;

            dblEinsatz = Convert.ToDouble(this.txtEinsatz.Text);
            intTipp1 = Convert.ToInt16(this.txtTipp1.Text);
            intTipp2 = Convert.ToInt16(this.txtTipp2.Text);
            intErgebnis1 = Convert.ToInt16(this.txtErgebnis1.Text);
            intErgebnis2 = Convert.ToInt16(this.txtErgebnis2.Text);


            //// ACHTUNG: Reihenfolge der Abfrage wichtig. Je genauer die Tippabfrage, desto weiter unten
            //this.lblGewinn.Text = "Leider nichts gewonnen";

            //if ((intTipp2 > intTipp1 && intErgebnis2 > intErgebnis1) || (intTipp2 < intTipp1 && intErgebnis2 < intErgebnis1))
            //{
            //    this.lblGewinn.Text = "Ihr Ergebnis: " + Convert.ToDouble(dblEinsatz);
            //}

            //if (intTipp2 - intTipp1 == intErgebnis2 - intErgebnis1)
            //{
            //    this.lblGewinn.Text = "Ihr Ergebnis: " + Convert.ToDouble(dblEinsatz * 3);
            //}

            //if (intTipp1 == intErgebnis1 && intTipp2 == intErgebnis2)
            //{
            //    this.lblGewinn.Text = "Ihr Ergebnis: " + Convert.ToDouble(dblEinsatz * 5);
            //}

            // Variante
            if (intTipp1 == intErgebnis1 && intTipp2 == intErgebnis2)
            {
                this.lblGewinn.Text = "Ihr Ergebnis: " + Convert.ToDouble(dblEinsatz * 5);
            }
            else if (intTipp2 - intTipp1 == intErgebnis2 - intErgebnis1)
            {
                this.lblGewinn.Text = "Ihr Ergebnis: " + Convert.ToDouble(dblEinsatz * 3);
            }
            else if ((intTipp2 > intTipp1 && intErgebnis2 > intErgebnis1) || (intTipp2 < intTipp1 && intErgebnis2 < intErgebnis1))
            {
                this.lblGewinn.Text = "Ihr Ergebnis: " + Convert.ToDouble(dblEinsatz);
            }
            else
            {
                this.lblGewinn.Text = "Leider nichts gewonnen";
            }

        }

{
            Int16 intEingabe = 0;

            if (Int16.TryParse(txtEingabe.Text, out intEingabe) == false)
            {
                txtAusgabe.Text = "Falsche Eingabe";
                txtEingabe.Text = "";
                txtEingabe.Focus();
                return;
            }

            //for (int i = 1; i <= intEingabe; i++)

            //}

            //int i = 0;
            //while (i < intEingabe)
            //{
            //    i++;
            //    txtAusgabe.Text = txtAusgabe.Text + i + "\r\n";                
            //}

            int i = 0;
            do
            {
                i++;
                txtAusgabe.Text = txtAusgabe.Text + i + "\r\n";
            } while (i < intEingabe);
        }

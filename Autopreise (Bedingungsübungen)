{
            double dblPreis = 0;

            if (this.radAudi.Checked == true)
            {
                dblPreis = 40000;
            }
            else if (this.radBMW.Checked == true)
            {
                dblPreis = 50000;
            }
            else if (this.radVW.Checked == true)
            {
                dblPreis = 30000;
            }
            else
            {
                MessageBox.Show("Bitte Auto auswählen!", "Fehler", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
            if (this.chkRadio.Checked == true)
            {
                dblPreis += 500;
            }
            if (this.chkSchiebedach.Checked == true)
            {
                dblPreis += 1000;
            }
            if (this.chkAlufelgen.Checked == true)
            {
                dblPreis += 750;
            }
            this.lblErgebnis.Text = "Gesamtpreis: " + Convert.ToString(dblPreis);
        }

        private void frmAutopreise_Activated(object sender, EventArgs e)
        {
            //Kein Radiobutton soll ausgwählt sein
            this.radAudi.Checked = false;
            this.radBMW.Checked = false;
            this.radVW.Checked = false;
        }
    }

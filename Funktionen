{
            clsRechnen fctCalc = new clsRechnen();
            this.lblAusgabe.Text = Convert.ToString(fctCalc.fctRechnen(Convert.ToDouble(this.txtEingabe1.Text), this.txtOp.Text,Convert.ToDouble(this.txtEingabe2.Text)));
        }
        
        
        

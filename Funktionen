{
            double dblResultat = 0;

            switch (strOp)
            {
                case "+":
                    dblResultat = dblEingabe1 + dblEingabe2;
                    break;
                case "-":
                    dblResultat = dblEingabe1 - dblEingabe2;
                    break;
                case "*":
                    dblResultat = dblEingabe1 * dblEingabe2;
                    break;
                case "/":
                    dblResultat = dblEingabe1 / dblEingabe2;
                    break;
            }

            return dblResultat;
        }
